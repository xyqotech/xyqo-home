# Database
DATABASE_URL="file:./dev.db"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Payment Providers
WAVE_API_KEY="your-wave-api-key"
ORANGE_MONEY_API_KEY="your-orange-money-api-key"
PAYDUNYA_MASTER_KEY="your-paydunya-master-key"
PAYDUNYA_PRIVATE_KEY="your-paydunya-private-key"
PAYDUNYA_TOKEN="your-paydunya-token"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880" # 5MB

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# WhatsApp Business API (optional)
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_ACCESS_TOKEN="your-access-token"

# Webhook URLs
WAVE_WEBHOOK_URL="https://your-domain.com/api/webhooks/wave"
ORANGE_WEBHOOK_URL="https://your-domain.com/api/webhooks/orange"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# Development
NODE_ENV="development"
PORT="3000"
